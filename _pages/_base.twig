{% set site_name = 'Ostap Shvab github pages' %}
{% set site_url = 'shvabuk.github.io' %}
{% set contact_email = 'shvabuk@gmail.com' %}
{% set contact_linkedin = 'https://www.linkedin.com/in/ostap-shvab-3a555341/' %}
{% set github_repository = 'https://github.com/shvabuk' %}


<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <meta charset="UTF-8">
        <meta content="IE=edge" http-equiv="X-UA-Compatible">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <meta name="description" content="{% block head_description %}{{ site_name }}. {{ head_page_description }}{% endblock %}">
        <meta content="Shvab Ostap" name="author">

        <link rel="apple-touch-icon" sizes="180x180" href="assets/favicon/180x180.png">
        <link rel="icon" type="image/png" sizes="16x16" href="assets/favicon/16x16.png">
        <link rel="icon" type="image/png" sizes="32x32" href="assets/favicon/32x32.png">
        <link rel="manifest" href="assets/favicon/site.webmanifest">
        <meta name="theme-color" content="#02609d">

        <meta name="robots" content="noindex,nofollow">

        <title>{% block head_title %}{{ site_name }} | {{ head_page_name }}{% endblock %}</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link
            href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap"
            rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="assets/css/style.css">
    {% endblock %}
</head>
<body class="body">

    <nav class="navigation">
        {% block navigation %}
            {% include '_navigation.twig' %}
        {% endblock %}
    </nav>

    <header class="header">
        {% block header %}
            {# <div class="header-bg"></div> // TODO: animation #}
            <div class="container container--header">
                <h1 class="page-title">{% block page_title %}Ostap pages{% endblock %}</h1>
                {% block page_description %}<p>This is a site about me and my gitHub repositories</p>{% endblock %}
            </div>
        {% endblock %}
    </header>

    <div class="container content">

        <main class="main">
            {% block content %}
            {% endblock %}
        </main>

        <div class="sidebars">
            {% block sidebars %}
                {% include 'sidebars/_author.twig' %}
            {% endblock %}
        </div>

    </div>

    <footer class="footer">
        {% block footer %}
            {% include '_footer.twig' %}
        {% endblock %}
    </footer>

    {% block scripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script><!-- TODO: delete bootstrap -->
        <script src="assets/js/main.js"></script>
    {% endblock %}

</body>
</html>
